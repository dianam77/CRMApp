@{
    ViewData["Title"] = "Dashboard";
}

<h2>داشبورد</h2>

<p>خوش آمدید، @User.Identity.Name</p>

<form asp-action="Logout" method="post" style="display:inline;">
    <button type="submit" class="btn btn-warning">خروج</button>
    @Html.AntiForgeryToken()
</form>

@if (User.IsInRole("Admin"))
{
    <h3>مدیریت کامل سیستم (ادمین)</h3>
    <ul>
        <li><a href="/Home/Register">ثبت نام کاربران</a></li>
        <li><a href="/Roles/Manage">مدیریت نقش‌ها</a></li>
        <li><a href="/CustomerIndividual">مدیریت مشتریان فردی</a></li>
        <li><a href="/CustomerCompany">مدیریت مشتریان شرکتی</a></li>
    </ul>
}
else if (User.IsInRole("Manager"))
{
    <h3>مدیریت کلی (Manager)</h3>
    <ul>
        <li><a href="/CustomerIndividual">مشتریان فردی</a></li>
        <li><a href="/CustomerCompany">مشتریان شرکتی</a></li>
    </ul>
}
else if (User.IsInRole("User"))
{
    <h3>مشاهده جداول (User)</h3>
    <ul>
        <li><a href="/CustomerIndividual">مشاهده مشتریان فردی</a></li>
        <li><a href="/CustomerCompany">مشاهده مشتریان شرکتی</a></li>
    </ul>
}
else
{
    <p>شما به هیچ بخشی دسترسی ندارید.</p>
}
