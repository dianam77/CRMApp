@model CRMApp.DTOs.RegisterDto

@{
    ViewData["Title"] = "ثبت نام کاربر جدید";
}

<h2>ثبت نام کاربر جدید</h2>

<form asp-action="Register" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Username">نام کاربری</label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password">رمز عبور</label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoleName">نقش</label>
        <select asp-for="RoleName" class="form-control">
            <option value="">انتخاب نقش</option>
            @{
                var roles = new List<string> { "Admin", "Manager", "User" };
                foreach (var role in roles)
                {
                    if (Model.RoleName == role)
                    {
                        <option value="@role" selected>@role</option>
                    }
                    else
                    {
                        <option value="@role">@role</option>
                    }
                }
            }
        </select>
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">ثبت نام</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
