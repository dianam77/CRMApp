@model IEnumerable<CRMApp.Models.ApplicationRole>

@{
    ViewData["Title"] = "مدیریت نقش‌ها";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>نام نقش</th>
            <th>کاربران</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    @if (role.UserRoles != null && role.UserRoles.Any())
                    {
                        foreach (var userRole in role.UserRoles)
                        {
                            @userRole.User.UserName <br />
                        }
                    }
                    else
                    {
                        <em>هیچ کاربری مرتبط نیست</em>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-primary btn-sm">ویرایش</a>
                </td>
            </tr>
        }
    </tbody>
</table>
